{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,

    "target": "es2022",
    "lib": ["es2023"],
    "module": "node16",

    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
