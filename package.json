{
  "name": "ftp-tail",
  "version": "3.0.0",
  "description": "Lightweight module to tail files over FTP.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/Thomas-Smyth/ftp-tail.git",
  "author": "Thomas Smyth <https://github.com/Thomas-Smyth>",
  "license": "MIT",
  "scripts": {
    "prepack": "yarn run build",
    "prepare": "node .husky/install.mjs",
    "build": "tsc",
    "lint": "eslint --fix . && prettier --write \"./**/*.ts\"",
    "lint-staged": "lint-staged"
  },
  "engines": {
    "node": ">=16"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none",
          "ignoreRestSiblings": false
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "basic-ftp": "^5.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "strict-event-emitter-types": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
