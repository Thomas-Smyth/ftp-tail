{
  "name": "ftp-tail",
  "version": "2.0.1",
  "description": "Lightweight module to tail files over FTP.",
  "type": "module",
  "main": "index.js",
  "repository": "https://github.com/Thomas-Smyth/ftp-tail.git",
  "author": "Thomas Smyth <https://github.com/Thomas-Smyth>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --fix . && prettier --write \"./**/*.js\"",
    "lint-staged": "lint-staged"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none",
          "ignoreRestSiblings": false
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix .",
      "prettier --write \"./**/*.js\"",
      "git add"
    ]
  },
  "dependencies": {
    "basic-ftp": "^4.6.6",
    "ssh2-sftp-client":"^7.1.0"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2"
  }
}
